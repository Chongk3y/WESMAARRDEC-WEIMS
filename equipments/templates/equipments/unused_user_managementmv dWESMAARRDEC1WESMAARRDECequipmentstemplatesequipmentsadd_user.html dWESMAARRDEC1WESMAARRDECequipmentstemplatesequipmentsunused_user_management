<!-- DataTables Initialization -->
<script>
  $(document).ready(function () {
    var table = $('#usersTable').DataTable({
      paging: true,
      ordering: true,
      info: false,
      lengthChange: false,
      searching: true,
      dom: 'lrtip'
    });

    $('#userTableSearch').on('input', function () {
      table.search(this.value).draw();
    });
  });
</script>
